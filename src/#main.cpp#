//    ************************************************************
//    *                           SAW                            *
//    *                      February 2015                       *
//    ************************************************************
//      Self-Avoiding random Walk in two dimensions, written by 
//      Freddy Obrecht during the first week of February of 2016.
//      The walker starts in the top left corner and moves randomly
//      with only one caveat - it cannot go back or cross over the
//      path, hence the name self-avoiding walker.
#include <SFML/Window.hpp>
#include <SFML/Graphics.hpp>
#include <SFML/System.hpp>

#include <iostream>
#include <sstream>

#include "../include/SAW.hh"

const float gDisplayx = 1000;
const float gDisplayy = 1000;

int main() {

  sf::RenderWindow window(sf::VideoMode(gDisplayx,gDisplayy), "Self-Avoiding Walk");
  window.setFramerateLimit(60);

  //////////////////////////////////////////////////////
  //                   Initialize                     //
  //////////////////////////////////////////////////////
  // Max Lattice Size is 50x50. 
  SAW saw(gDisplayx,gDisplayy,9);
  
  while( window.isOpen() ) {

    sf::Event event;
    while( window.pollEvent(event) ) {
      if( event.type == sf::Event::Closed || sf::Keyboard::isKeyPressed(sf::Keyboard::Escape) ) {
	window.close();
      }
    }
    window.clear(sf::Color::Black);
    window.draw(saw); 
    window.display();      
  }
  return 0;
}
